<body>

<!--  pc  -->
<div class="d-none d-sm-block">
  <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
    <h1 class="mr-md-auto">
      <%= link_to '/' do %>
        <%= image_tag 'title.jpg', alt: '札幌学生野球連盟', style: 'width:300px' %>
      <% end %>
    </h1>
    <nav class="nav my-2 my-md-0 mr-md-3">
      <%= link_to 'トップページ', '/', class: 'nav-link border-right border-left' %>
      <%= link_to '試合速報・結果', game_infos_path, class: 'nav-link border-right' %>
      <%= link_to '順位表', '/standing', class: 'nav-link border-right' %>
      <%= link_to '大会日程', '/nittei', class: 'nav-link border-right' %>
      <%= link_to '表彰選手', '/award', class: 'nav-link border-right' %>
      <%= link_to '加盟大学・関連組織', '/team', class: 'nav-link border-right' %>
    </nav>
  </div>
</div>

<div class="container">
  <div class="row">

    <!--  sp  -->
    <div class="d-sm-none d-block">
      <div class="col-12 mt-3">
        <header>
          <%= link_to '/' do %>
            <%= image_tag 'title.jpg', alt: '札幌学生野球連盟', class: 'img-fluid' %>
          <% end %>
          <nav class="navbar navbar-expand-lg navbar-light pt-3 text-center">
            <button type="button" class="navbar-toggler btn-block"
                    data-toggle="collapse" data-target="#Navber"
                    aria-controls="Navber" aria-expanded="false" aria-label="ナビゲーションバー">
              menu
            </button>
            <div class="collapse navbar-collapse" id="Navber">
              <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <div class="border-top">
                  <li class="nav-item">
                    <%= link_to 'トップページ', '/', class: 'nav-link' %>
                  </li>
                </div>
                <div class="border-top">
                  <li class="nav-item">
                    <%= link_to '試合速報・結果', game_infos_path, class: 'nav-link' %>
                  </li>
                </div>
                <div class="border-top">
                  <li class="nav-item">
                    <%= link_to '順位表', '/standing', class: 'nav-link' %>
                  </li>
                </div>
                <div class="border-top">
                  <li class="nav-item">
                    <%= link_to '大会日程', '/nittei', class: 'nav-link' %>
                  </li>
                </div>
                <div class="border-top">
                  <li class="nav-item">
                    <%= link_to '表彰選手', '/award', class: 'nav-link' %>
                  </li>
                </div>
                <div class="border-top border-bottom">
                  <li class="nav-item">
                    <%= link_to '加盟大学・関連組織', '/team', class: 'nav-link' %>
                  </li>
                </div>
              </ul>
            </div>
          </nav>
        </header>
      </div>
    </div>

    <div class="col-12">
      <%= yield %>
    </div>

  </div>
</div>

<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm"></div>

<div class="container">
