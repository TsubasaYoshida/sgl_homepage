<% if notice %>
  <div class="alert alert-success my-4" role="alert"><strong>完了</strong> - <%= notice %></div>
<% end %>

<%# pc %>
<div class="d-none d-sm-block">
  <h2 class="float-left">試合情報管理</h2>

  <div class="padding-bottom10 padding-top10 float-right">
    <%= link_to '新規作成', new_championship_championship_game_path, class: 'btn btn-default' %>
  </div>

  <table class="table table-bordered text-center">
    <tr class="bg-green">
      <th>試合日</th>
      <th>球場</th>
      <th>予備日</th>
      <th colspan="4"></th>
    </tr>
    <% @championship_games.each do |championship_game| %>
      <tr>
        <td style="vertical-align: middle;">
          <%= championship_game.date %>
        </td>
        <td style="vertical-align: middle;">
          <%= championship_game.stadium %>
        </td>
        <td style="vertical-align: middle;">
          <%= '予備日' if championship_game.rain_date %>
        </td>
        <td>
          <%= link_to '基本情報編集', edit_championship_championship_game_path(@championship, championship_game), class: 'btn btn-default' %>
        </td>
        <td>
          <%= link_to '試合情報編集', edit_game_championship_championship_game_path(@championship, championship_game), class: 'btn btn-default' %>
        </td>
        <td>
          <%= link_to '得点入力', score_championship_championship_game_path(@championship, championship_game), class: 'btn btn-default' %>
        </td>
        <td>
          <%= link_to '削除', [@championship, championship_game], method: :delete, data: {confirm: '本当に削除してよろしいですか？'}, class: 'btn btn-default' %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

<%# sp %>
<div class="d-sm-none d-block">
  <h2>試合情報管理</h2>

  <%= link_to '新規作成', new_championship_championship_game_path, class: 'btn btn-default btn-block' %>

  <% @championship_games.each do |championship_game| %>
    <div class="mt-3 border-bottom"></div>
    <h3><%= championship_game.date %></h3>
    <%= link_to '基本情報編集', edit_championship_championship_game_path(@championship, championship_game), class: 'btn btn-default btn-block' %>
    <%= link_to '試合情報編集', edit_game_championship_championship_game_path(@championship, championship_game), class: 'btn btn-default btn-block' %>
    <%= link_to '得点入力', score_championship_championship_game_path(@championship, championship_game), class: 'btn btn-default btn-block' %>
    <%= link_to '削除', [@championship, championship_game], method: :delete, data: {confirm: '本当に削除してよろしいですか？'}, class: 'btn btn-outline-danger btn-block' %>
  <% end %>
</div>
