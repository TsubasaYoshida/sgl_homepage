<%= form_with(model: info, local: true) do |form| %>

  <% if info.errors.any? %>
    <div style="color: red">
      <ul>
        <% info.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :disp_date, '日付' %>
    <%= form.date_field :disp_date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :article, '記事内容' %>
    <%= form.text_area :article, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit '情報送信', data: {disable_with: '処理中…'}, class: 'btn btn-default' %>
  </div>

<% end %>
