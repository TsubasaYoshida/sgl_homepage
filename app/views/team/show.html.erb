<h2 class="mb-0">
  加盟大学
  <small>（全18チーム）</small>
</h2>

<div class="mx-2">

  <% @leagues.each do |league| %>

    <h3 class="pt-2">
      <%= league.name %>
    </h3>

    <% league.teams.each_with_index do |team, team_index| %>

      <% if (team_index + 1) % 3 == 1 %>
        <%= '<div class="row">'.html_safe %>
      <% end %>

      <div class="col-sm-4 pt-2">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= team.name %></h5>
            <%= link_to '部HP', "#{team.hp_team}", class: 'ml-2 btn btn-default', target: '_blank' %>
            <%= link_to '大学HP', "#{team.hp_college}", class: 'ml-2 btn btn-default', target: '_blank' %>
          </div>
        </div>
      </div>

      <% if (team_index + 1) % 3 == 0 %>
        <%= '</div>'.html_safe %>
      <% end %>

    <% end %>
  <% end %>
</div>