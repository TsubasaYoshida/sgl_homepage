<h2>大会日程</h2>

<%= form_tag({controller: :nittei, action: :find}, method: :get) do %>
  <div class="row" style="padding-left: 5px; padding-right: 5px">
    <div class="col-sm-1"></div>
    <div class="col-sm-3">
      <div class="form-group">
        <%= select_tag :key_year, options_for_select(Constants.get_year_list, @selected_year), class: 'form-control' %>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="form-group">
        <%= select_tag :key_season, options_for_select(['春季', '秋季'], @selected_season), class: 'form-control' %>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="form-group">
        <%= select_tag :key_event,
                       options_for_select(['1部リーグ戦', '2部リーグ戦', '3部リーグ戦', '入替戦', 'トーナメント'], @selected_event),
                       class: 'form-control' %>
      </div>
    </div>
    <div class="col-sm-2">
      <%= submit_tag '表示', class: 'btn btn-default' %>
    </div>
  </div>
<% end %>

<div class="py-4"></div>

<div class="card mb-5">
  <div class="card-body">

    <div class="font-size-16">
      <%= @selected_year %>年度<%= @selected_season %><%= @selected_event %>
    </div>
    <div class="text-right font-size-12 pt-2 pr-2">
      最終更新：<%= EventOneDay.order(updated_at: :desc).first.updated_at.strftime("%Y-%-m-%-d %H:%M") %>
    </div>


    <div class="row pt-2" style="padding-left: 5px; padding-right: 5px">
      <div class="col-sm-6">
        <p>第一節</p>
        <%= render 'show', nittei_infos: @nittei_infos_1 %>
      </div>
      <div class="col-sm-6">
        <p>第二節</p>
        <%= render 'show', nittei_infos: @nittei_infos_2 %>
      </div>
    </div>

  </div>
</div>