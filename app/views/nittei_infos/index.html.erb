<p id="notice"><%= notice %></p>

<h1>Nittei Infos</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Season</th>
      <th>Disp date</th>
      <th>Stadium</th>
      <th>Top team 1</th>
      <th>Bottom team 1</th>
      <th>Start time 1</th>
      <th>Message 1</th>
      <th>Rain date flag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nittei_infos.each do |nittei_info| %>
      <tr>
        <td><%= nittei_info.event %></td>
        <td><%= nittei_info.season %></td>
        <td><%= nittei_info.disp_date %></td>
        <td><%= nittei_info.stadium %></td>
        <td><%= nittei_info.top_team_1 %></td>
        <td><%= nittei_info.bottom_team_1 %></td>
        <td><%= nittei_info.start_time_1 %></td>
        <td><%= nittei_info.message_1 %></td>
        <td><%= nittei_info.rain_date_flag %></td>
        <td><%= link_to 'Show', nittei_info %></td>
        <td><%= link_to 'Edit', edit_nittei_info_path(nittei_info) %></td>
        <td><%= link_to 'Destroy', nittei_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

