<h1>Event One Days</h1>

<table>
  <thead>
    <tr>
      <th>Event info</th>
      <th>Disp date</th>
      <th>Stadium</th>
      <th>Round 1</th>
      <th>Top team 1</th>
      <th>Bottom team 1</th>
      <th>Start time 1</th>
      <th>Message 1</th>
      <th>Round 2</th>
      <th>Top team 2</th>
      <th>Bottom team 2</th>
      <th>Start time 2</th>
      <th>Message 2</th>
      <th>Round 3</th>
      <th>Top team 3</th>
      <th>Bottom team 3</th>
      <th>Start time 3</th>
      <th>Message 3</th>
      <th>Rain date flag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_one_days.each do |event_one_day| %>
      <tr>
        <td><%= event_one_day.event_info %></td>
        <td><%= event_one_day.disp_date %></td>
        <td><%= event_one_day.stadium %></td>
        <td><%= event_one_day.round_1 %></td>
        <td><%= event_one_day.top_team_1 %></td>
        <td><%= event_one_day.bottom_team_1 %></td>
        <td><%= event_one_day.start_time_1 %></td>
        <td><%= event_one_day.message_1 %></td>
        <td><%= event_one_day.round_2 %></td>
        <td><%= event_one_day.top_team_2 %></td>
        <td><%= event_one_day.bottom_team_2 %></td>
        <td><%= event_one_day.start_time_2 %></td>
        <td><%= event_one_day.message_2 %></td>
        <td><%= event_one_day.round_3 %></td>
        <td><%= event_one_day.top_team_3 %></td>
        <td><%= event_one_day.bottom_team_3 %></td>
        <td><%= event_one_day.start_time_3 %></td>
        <td><%= event_one_day.message_3 %></td>
        <td><%= event_one_day.rain_date_flag %></td>
        <td><%= link_to 'Show', event_one_day %></td>
        <td><%= link_to 'Edit', edit_event_one_day_path(event_one_day) %></td>
        <td><%= link_to 'Destroy', event_one_day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

