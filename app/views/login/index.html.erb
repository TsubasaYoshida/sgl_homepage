<!DOCTYPE html>
<html>
<head>
  <title>ログインページ</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta http-equiv="content-language" content="ja">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

<div class="container">
  <div class="text-center">
    <div class="my-5"></div>
    <%= image_tag 'logo.png', alt: 'ロゴ', class: 'img-fluid' %>

    <div class="py-2 mt-2"></div>

    <h1>ログイン</h1>

    <div class="py-2"></div>

    <% if @error %>
      <p style="color: Red"><%= @error %></p>
    <% end %>

    <% if notice %>
      <p style="color: Red"><%= notice %></p>
    <% end %>

    <div class="row">
      <div class="col-sm-4"></div>
      <div class="col-sm-4">
        <div class="row">
          <div class="col-sm-2"></div>
          <div class="col-sm-8">

            <%= form_tag action: :auth do %>
              <div class="form-group">
                <%= text_field_tag :username, '', size: 20, class: 'form-control', placeholder: 'ユーザー名' %>
              </div>
              <div class="form-group">
                <%= password_field_tag :password, '', size: 20, class: 'form-control', placeholder: 'パスワード' %>
              </div>

              <%= hidden_field_tag :referer, flash[:referer] %>

              <div class="py-2"></div>

              <%= submit_tag 'ログイン', class: 'btn btn-default btn-block' %>
            <% end %>

          </div>
          <div class="col-sm-2"></div>
        </div>
        <div class="my-5"></div>
        <p style="margin-bottom: 0">&#169; 2012-2019 Sapporo Gakusei League</p>
      </div>
      <div class="col-sm-4"></div>
    </div>
    <div class="my-5"></div>
  </div>
</div>
</body>
</html>
