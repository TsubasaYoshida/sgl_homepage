<% if notice %>
  <div class="alert alert-success my-4" role="alert"><strong>完了</strong> - <%= notice %></div>
<% end %>

<%# pc %>
<div class="d-none d-sm-block">
  <h2 class="float-left">代表決定戦情報管理</h2>

  <div class="padding-bottom10 padding-top10 float-right">
    <%= link_to '新規作成', new_championship_path, class: 'btn btn-default' %>
  </div>

  <table class="table table-bordered text-center">
    <tr class="bg-green">
      <th>年度</th>
      <th>最終更新日</th>
      <th colspan="4"></th>
    </tr>
    <% @championships.each do |championship| %>
      <tr>
        <td style="vertical-align: middle;">
          <%= championship.year %>
        </td>
        <td style="vertical-align: middle;">
          <%= l championship.updated_at, format: :standard %>
        </td>
        <td>
          <%= link_to '大会情報編集', edit_championship_path(championship), class: 'btn btn-default' %>
        </td>
        <td>
          <%= link_to '試合情報編集', management_championship_championship_games_path(championship), class: 'btn btn-default' %>
        </td>
        <td>
          <%= link_to '表彰情報編集', management_championship_championship_awards_path(championship), class: 'btn btn-default' %>
        </td>
        <td>
          <%= link_to '大会ごと削除', championship, method: :delete, data: {confirm: '本当に削除してよろしいですか？'}, class: 'btn btn-default' %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

<%# sp %>
<div class="d-sm-none d-block">
  <h2>代表決定戦情報管理</h2>

  <%= link_to '新規作成', new_championship_path, class: 'btn btn-default btn-block' %>

  <% @championships.each do |championship| %>
    <div class="mt-3 border-bottom"></div>
    <h3><%= championship.year %></h3>
    <%= link_to '大会情報編集', edit_championship_path(championship), class: 'btn btn-default btn-block' %>
    <%= link_to '試合情報編集', management_championship_championship_games_path(championship), class: 'btn btn-default btn-block' %>
    <%= link_to '表彰情報編集', management_championship_championship_awards_path(championship), class: 'btn btn-default btn-block' %>
    <%= link_to '大会ごと削除', championship, method: :delete, data: {confirm: '本当に削除してよろしいですか？'}, class: 'btn btn-outline-danger btn-block' %>
  <% end %>
</div>
