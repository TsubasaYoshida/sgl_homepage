<h2 class="text-center font-weight-bold my-sm-5" style="font-size: 24px">加盟大学・関連組織</h2>

<div class="mx-2">

  <% @leagues.each_with_index do |league, league_index| %>

    <% if league_index != 0 %>
      <div class="mt-5"></div>
    <% else %>
      <div class="mt-3"></div>
    <% end %>

    <h3 class="text-sm-left text-center font-weight-bold" style="font-size: 20px">
      <%= league.name %>
    </h3>

    <% league.teams.each_with_index do |team, team_index| %>

      <% if (team_index + 1) % 3 == 1 %>
        <%= '<div class="row">'.html_safe %>
      <% end %>

      <div class="col-sm-4 pt-2">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title" style="font-size: 18px"><%= team.name %></h4>
            <% if team.hp_team %>
              <%= link_to '野球部HP', "#{team.hp_team}", class: 'ml-2 btn btn-default', target: '_blank' %>
            <% end %>
            <%= link_to '大学HP', "#{team.hp_college}", class: 'ml-2 btn btn-default', target: '_blank' %>
          </div>
        </div>
      </div>

      <% if (team_index + 1) % 3 == 0 %>
        <%= '</div>'.html_safe %>
      <% end %>

    <% end %>
  <% end %>
</div>

<h3 class="text-sm-left text-center font-weight-bold mt-5" style="font-size: 20px">関連組織</h3>

<div class="mx-2 mb-3">

  <% @organizations.each_with_index do |organization, organization_index| %>

    <% if (organization_index + 1) % 3 == 1 %>
      <%= '<div class="row">'.html_safe %>
    <% end %>

    <div class="col-sm-4 pt-2">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title" style="font-size: 18px"><%= organization.name %></h4>
          <%= link_to 'ホームページ', "#{organization.url}", class: 'ml-2 btn btn-default', target: '_blank' %>
        </div>
      </div>
    </div>

    <% if (organization_index + 1) % 3 == 0 %>
      <%= '</div>'.html_safe %>
    <% end %>

  <% end %>

</div>

<div class="mb-5"></div>
