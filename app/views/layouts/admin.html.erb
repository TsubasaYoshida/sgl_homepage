<!DOCTYPE html>
<html>
<head>
  <title>札幌学生野球連盟 HP管理ページ</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta http-equiv="content-language" content="ja">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

<div class="container">
  <div class="row">

    <div class="col-12">
      <div class="d-none d-sm-block">

        <div class="row">
          <div class="col-4">
            <h1 class="page-header mt-4">
              <%= link_to '/admin' do %>
                <%= image_tag 'admin_title_pc.png', alt: '札幌学生野球連盟 管理者用サイト', class: 'img-fluid float-left' %>
              <% end %>
            </h1>
          </div>

          <div class="col-2"></div>

          <div class="col-6">
            <div class="row mt-5 justify-content-end">
              <nav class="nav">
                <%= link_to '一般トップ', '/', class: 'nav-link border-right border-left' %>
                <%= link_to '試合情報', '/game_infos/management', class: 'nav-link border-right' %>
                <%= link_to '新着情報', '/infos/management', class: 'nav-link border-right' %>
                <%= link_to '日程情報', event_infos_path, class: 'nav-link border-right' %>
                <%= link_to '表彰選手', management_award_infos_path, class: 'nav-link border-right mr-3' %>
                <%= link_to 'ログアウト', '/logout', method: :post, class: 'nav-link btn btn-default mr-2' %>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="d-sm-none d-block">
      <%= link_to '/admin' do %>
        <%= image_tag 'admin_title_sp.png', alt: '札幌学生野球連盟 管理者用サイト', class: 'img-fluid' %>
      <% end %>
      <div class="col-12 mt-2">
        <header>
          <nav class="navbar navbar-expand-lg navbar-light pt-3 text-center">
            <button type="button" class="navbar-toggler btn-block"
                    data-toggle="collapse" data-target="#Navber"
                    aria-controls="Navber" aria-expanded="false" aria-label="ナビゲーションバー">
              admin menu
            </button>
            <div class="collapse navbar-collapse" id="Navber">
              <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <div class="border-top">
                  <li class="nav-item">
                    <%= link_to '試合情報', '/game_infos/management', class: 'nav-link' %>
                  </li>
                </div>
                <div class="border-top">
                  <li class="nav-item">
                    <%= link_to '新着情報', '/infos/management', class: 'nav-link' %>
                  </li>
                </div>
                <div class="border-top border-bottom">
                  <li class="nav-item">
                    <%= link_to '一般トップ', '/', class: 'nav-link' %>
                  </li>
                </div>
              </ul>
            </div>
          </nav>
        </header>
      </div>
    </div>

    <div class="col-12 margin-top30 border-5px mt-3"></div>

    <div class="col-12">
      <%= content_for?(:content) ? yield(:content) : yield %>
    </div>

    <div class="col-12 col-12-footer margin-top30 border-5px mb-5">
      <footer>
        <div class="d-sm-none d-block">
          <div class="py-3"></div>
          <%= link_to 'ログアウト', '/logout', method: :post, class: 'btn btn-default btn-block' %>
        </div>
        <div class="py-3"></div>
        <div class="text-center">
          <p style="margin-bottom: 0">&#169; 2012-2019 Sapporo Gakusei League</p>
        </div>
      </footer>
    </div>
  </div>
</div>
</body>
</html>
